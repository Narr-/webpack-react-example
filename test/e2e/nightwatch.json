{
  "src_folders": ["test/e2e/specs"],
  "output_folder": "test/e2e/reports",
  "globals_path": "test/e2e/config.js",
  "selenium": {
    "server_path": "bin/selenium-server-standalone-2.52.0.jar",
    "start_process": true,
    "host": "127.0.0.1",
    "port": 4444,
    "log_path": false
  },
  "test_settings": {
    "default": {
      "desiredCapabilities": {
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      },
      "filter": "*.spec.js",
      "screenshots": {
        "enabled": true,
        "path": "test/e2e/screenshots",
        "on_error": true,
        "on_failure": true
      }
    }
  }
}
